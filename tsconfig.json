{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "use-cases/*": ["./use-cases/*"],
      "gateways/*": ["./gateways/*"]
    }
  },
  "include": [
    "cli/**/*",
    "gateways/**/*",
    "use-cases/**/*",
    "web/**/*",
  ],
  "exclude": ["node_modules", "junk-space"]
}
